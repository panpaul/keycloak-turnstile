{
    "extends": "@tsconfig/node21/tsconfig.json",

    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "Node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution":"node",
        "transpileOnly": true,
        "files": true
    }
}